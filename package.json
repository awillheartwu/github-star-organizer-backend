{
  "name": "github-star-organizer-backend",
  "version": "1.2.0",
  "type": "module",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "main.ts",
  "scripts": {
    "test": "jest --config test/jest.config.cjs --runInBand --passWithNoTests --forceExit",
    "test:coverage": "jest --config test/jest.config.cjs --coverage --runInBand --passWithNoTests --forceExit",
    "test:coverage:html": "jest --config test/jest.config.cjs --coverage --runInBand --passWithNoTests --forceExit && open coverage/index.html",
    "test:watch": "jest --config test/jest.config.cjs --runInBand --passWithNoTests --watch",
    "dev": "dotenv -e .env.development -- tsx watch ./src/main.ts | pino-pretty --colorize",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json --resolve-full-paths --resolve-full-extension .js",
    "start": "node dist/main.js",
    "start:prod:local": "dotenv -e .env.production -- node dist/main.js",
    "test:bull": "dotenv -e .env.development -- tsx src/scripts/testBullmq.ts",
    "postinstall": "prisma generate && node ./src/scripts/nullPatch.mjs",
    "update:packages": "npx npm-check-updates -u",
    "seed:admin": "dotenv -e .env.development -- tsx src/scripts/seedAdmin.ts",
    "sanitize:stats": "dotenv -e .env.development -- tsx scripts/sanitize-stats-json.ts",
    "db:gen": "prisma generate && node ./src/scripts/nullPatch.mjs",
    "db:studio": "prisma studio",
    "migrate": "dotenv -e .env.development -- npx prisma migrate dev",
    "migrate:prod": "prisma migrate deploy",
    "lint": "eslint '{src,test}/**/*.ts'",
    "lint:fix": "eslint --fix '{src,test}/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "pg": "dotenv -e .env.development -- npx prisma generate && node ./src/scripts/nullPatch.mjs",
    "pp": "dotenv -e .env.development -- npx prisma db push",
    "ps": "dotenv -e .env.development -- npx prisma studio",
    "prst": "dotenv -e .env.development -- npx prisma migrate reset",
    "commit": "git-cz",
    "release": "standard-version",
    "docs:json": "tsx scripts/export-openapi.ts",
    "docs:config": "tsx scripts/export-config-doc.ts",
    "docs:prisma": "tsx scripts/export-prisma-doc.ts",
    "docs:typedoc": "typedoc",
    "docs": "pnpm run docs:json && pnpm run docs:config && pnpm run docs:prisma && pnpm run docs:typedoc"
  },
  "author": "wuhaoli",
  "license": "MIT",
  "dependencies": {
    "@bull-board/api": "^6.0.0",
    "@bull-board/fastify": "^6.0.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/type-provider-typebox": "^5.2.0",
    "@joggr/fastify-prisma": "^6.0.0",
    "@octokit/request-error": "^7.0.0",
    "@octokit/rest": "^22.0.0",
    "@prisma/client": "^6.12.0",
    "@sinclair/typebox": "^0.34.38",
    "argon2": "^0.44.0",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.58.4",
    "close-with-grace": "^2.2.0",
    "dotenv": "^17.2.0",
    "dotenv-cli": "^10.0.0",
    "fastify": "^5.4.0",
    "fastify-plugin": "^5.0.1",
    "ioredis": "^5.7.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.13"
  },
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@babel/preset-env": "^7.25.0",
    "@babel/preset-typescript": "^7.24.7",
    "@faker-js/faker": "^9.9.0",
    "@fastify/autoload": "^6.3.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint-plugin-prettier": "^3.1.3",
    "@types/http-errors": "^2.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lint-staged": "^13.3.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^5.62.0",
    "babel-jest": "^30.0.5",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "fastify-cli": "^7.4.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "nyc": "^17.1.0",
    "pino-pretty": "11.2.1",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.1.2",
    "prisma": "^6.12.0",
    "prismabox": "^1.1.24",
    "standard-version": "^9.5.0",
    "stop-only": "^3.4.3",
    "tap": "^21.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.3",
    "typedoc": "^0.28.12",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "{src,test}/**/*.{ts,js,json}": [
      "prettier --write '{src,test}/**/*.ts'",
      "eslint --fix",
      "stop-only --file"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
